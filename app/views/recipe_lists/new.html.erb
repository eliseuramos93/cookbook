<div class="mt-4 mb-2">
  <h2 class="">Criar nova lista de receitas</h2>
  <% if @recipe_list.errors.any? %>
    <div class="alert alert-danger mt-2">
      <%=  %>
    </div>
  <% end %>
  <div class="card border-0 shadow-lg">
    <div class="card-body">
      <%= form_with model: @recipe_list do |f| %>
        <%= f.label :name, class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control mb-3' %>
        <%= f.submit 'Criar Lista de Receitas', class:'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>